{
    "name": "project-coin-backend",
    "version": "1.0.0",
    "description": "This prpject implements a complete authentication setup for REST APIs",
    "main": "build/index.js",
    "type": "module",
    "scripts": {
        "start": "node .",
        "compile": "npx tsc --project .",
        "build": "npx tsc --build --verbose",
        "clean-build": "npx tsc --build --clean --verbose",
        "serve": "concurrently \"npx tsc --watch\" \"npx nodemon build/index.js\"",
        "prisma-sync": "npx prisma db pull && npx prisma generate",
        "prettier": "prettier --write --list-different .",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "npm run lint -- --fix"
    },
    "author": "Guhan B <guhan.b.official@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^5.7.1",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "jwt-decode": "^4.0.0",
        "pino": "^8.19.0",
        "pino-http": "^9.0.0",
        "pino-pretty": "^10.3.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/helmet": "^4.0.0",
        "@types/joi": "^17.2.3",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.11.24",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "prisma": "^5.7.1",
        "typescript": "^5.3.3"
    }
}
